---
import DesktopNavBar from "./DesktopNavBar.astro";
import MobileNavBar from "./MobileNavBar.astro";
import LanguageToggle from "./LanguageToggle.astro";
---

<header>
  <DesktopNavBar />
  <MobileNavBar />
  <LanguageToggle />
</header>

<style>
  header {
    position: fixed;
    z-index: 50;
    top: 0;
    width: 100%;
    display: grid;
    place-items: center;
    opacity: 80%;
    /* background: linear-gradient(to bottom, var(--accent_ligth), transparent 15%); */
  }

  @media screen and (min-width: 768px) {
    header {
      backdrop-filter: blur(10px);
      border-top: 5px solid var(--pink-900);
    }
  }
</style>
