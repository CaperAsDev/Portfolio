<div class="background"></div>

<style>
  @property --hue {
    syntax: "<angle>";
    initial-value: 170deg;
    inherits: false;
  }
  @property --chroma {
    syntax: "<number>";
    initial-value: 0.05;
    inherits: false;
  }
  @property --chroma2 {
    syntax: "<number>";
    initial-value: 0.1;
    inherits: false;
  }
  @property --lightness {
    syntax: "<number>";
    initial-value: 0.35;
    inherits: false;
  }
  @property --lightness2 {
    syntax: "<number>";
    initial-value: 0.5;
    inherits: false;
  }
  @property --angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
  .background {
    --clr: oklch(var(--lightness) var(--chroma) var(--hue));
    --hue2: calc(var(--hue) + 90deg);
    --clr2: oklch(var(--lightness2) var(--chroma2) var(--hue2));
    position: fixed;
    width: 100vw;
    height: 100vh;
    inset: 0;
    z-index: -10;
    background: linear-gradient(var(--angle), var(--clr), var(--clr2));
    animation:
      clr-chg infinite alternate 9s linear,
      angle-chg infinite alternate 23s linear,
      chroma-chg infinite alternate 5s ease-in,
      lightness-chg infinite alternate 7s ease-out;
  }

  @keyframes clr-chg {
    from {
      --hue: 170deg;
    }
    to {
      --hue: 300deg;
    }
  }
  @keyframes angle-chg {
    from {
      --angle: 0deg;
    }
    to {
      --angle: 360deg;
    }
  }
  @keyframes chroma-chg {
    from {
      --chroma: 0.04;
      --chroma2: 0.1;
    }
    to {
      --chroma: 0.1;
      --chrom2: 0.04;
    }
  }
  @keyframes lightness-chg {
    from {
      --lightness: 0.3;
      --lightness2: 0.5;
    }
    to {
      --lightness: 0.5;
      --lightness2: 0.3;
    }
  }
</style>
