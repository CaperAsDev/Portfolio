<svg class="hamburger" viewBox="0 0 100 100" width="50">
  <rect class="line top" width="80" height="10" y="25" x="10" rx="5"> </rect>
  <rect class="line middle" width="80" height="10" y="45" x="10" rx="5"> </rect>
  <rect class="line bottom" width="80" height="10" y="65" x="10" rx="5"> </rect>
</svg>

<style>
  .hamburger.open {
    & :is(.top, .bottom) {
      y: 45;
    }
    & .middle {
      opacity: 0;
    }
    & .top {
      rotate: 45deg;
    }
    & .bottom {
      rotate: -45deg;
    }
  }
  .hamburger .line {
    transition:
      y 300ms ease-in 300ms,
      rotate 300ms ease-in,
      opacity 0ms 300ms;
    transform-origin: center;
  }
  .hamburger.open .line {
    transition:
      y 300ms ease-in,
      rotate 300ms ease-in 300ms,
      opacity 0ms 300ms;
  }
</style>
