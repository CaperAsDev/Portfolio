---
import { Icon } from "astro-icon/components";

interface Props {
  link: string;
  description: string;
  logo: string;
  name: string;
}
const { link, description, logo, name } = Astro.props;
---

<article>
  <div class="techPill">
    <a href={link} aria-label={name} target="_blank" rel="noopener norefer">
      <Icon name={logo} title={`Documentacion de ${name}`} />
    </a>
    <button aria-describedby={`tooltip-${name}`}>
      <span>{name}</span>
    </button>
  </div>
  <div id={`tooltip-${name}`} role="tooltip">
    <p>{description}</p>
  </div>
</article>

<style>
  @property --a {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
  article {
    flex-grow: 1;
  }

  .techPill {
    display: flex;
    align-items: center;
    background-color: var(--blue-700);
    border-radius: 10px 10px 0 0;
    font-size: var(--fs-s);
    height: fit-content;
    mix-blend-mode: soft-light;
    border-bottom: 2px solid;
    border-image: conic-gradient(
        from var(--a),
        var(--blue-100),
        var(--blue-200),
        var(--blue-300),
        var(--blue-400),
        var(--blue-500),
        var(--blue-600),
        var(--blue-700),
        var(--blue-800),
        var(--blue-900),
        var(--blue-950),
        var(--blue-50)
      )
      1;
  }

  @media (prefers-reduced-motion: no-preference) {
    .techPill {
      animation: a 4s linear infinite;
    }
    @keyframes a {
      to {
        --a: 1turn;
      }
    }
  }

  a {
    height: 35px;
    width: 35px;
    border-radius: 8px;
    transform: scale(1.1);
    transition: transform 500ms cubic-bezier(0.075, 0.82, 0.165, 1);
    &:focus {
      outline-color: var(--blue-200);
    }

    svg {
      height: 100%;
      width: 100%;
    }

    &:is(:hover, :focus) {
      transform: scale(1.3);
    }
  }

  button {
    display: grid;
    place-items: center;
    height: 100%;
    background-color: transparent;
    outline: 0px solid var(--pink-600);
    color: var(--blue-200);
    flex-grow: 1;
    border: none;
    padding: 4px 12px;

    span {
      text-wrap: nowrap;
    }
  }

  div[role="tooltip"] {
    visibility: hidden;
    position: absolute;
    display: grid;
    place-items: center;
    z-index: 20;
    width: 100%;
    height: fit-content;
    bottom: 100%;
    left: 0;
    right: auto;

    p {
      width: clamp(300px, 100%, 600px);
      padding: clamp(10px, 3.5vw, 20px);
      backdrop-filter: blur(10px);
      border-radius: 10px;
      background-color: hsla(296, 71%, 21%, 0.5);
    }
  }

  .techPill:has(> :is(button:focus, a:focus)),
  .techPill:hover {
    mix-blend-mode: normal;
  }

  .techPill:has(> :is(button:focus)) + div[role="tooltip"],
  .techPill:hover + div[role="tooltip"] {
    visibility: visible;
  }

  article:has(~ :focus-within),
  article:focus-within ~ article {
    .techPill:hover + div[role="tooltip"] {
      visibility: hidden;
    }
  }

  @media screen and (width >= 768px) {
    div[role="tooltip"] {
      position: absolute;
      bottom: 125%;
    }
  }
  @media screen and (width >= 1440px) {
    div[role="tooltip"] {
      position: absolute;
      bottom: 140%;
    }
  }
</style>
