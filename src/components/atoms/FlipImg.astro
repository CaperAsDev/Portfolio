---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  img_1: ImageMetadata;
  img_2: ImageMetadata;
}

const { img_1, img_2 } = Astro.props;
---

<div class="scene">
  <div class="flipImg__wrapper">
    <Image
      src={img_1}
      class="face face--front"
      alt={"Original Character Amalthea"}
      height={280}
      width={280}
    />
    <Image
      class="face face--back"
      height={280}
      width={280}
      alt={"Original Character Samantha"}
      src={img_2}
    />
  </div>
</div>

<style>
  @property --bgAngle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }
  .scene {
    --bgClr: rgb(51, 24, 79);
    perspective: 600px;
    width: 280px;
    height: 280px;
    border-radius: 50%;
    border: 5px solid transparent;
    background-image: radial-gradient(
        oklch(from var(--bgClr) l c h) 35%,
        oklch(from rebeccapurple calc(l + 0.1) c h / 0.5),
        transparent
      ),
      conic-gradient(
        from var(--bgAngle),
        var(--blue-100),
        var(--blue-300),
        var(--blue-600),
        var(--blue-300),
        var(--blue-100)
      );
    background-origin: border-box;
    background-clip: padding-box, border-box;
    box-shadow:
      0px 0px 15px 1px var(--blue-200),
      inset 0px 0px 25px 1px var(--blue-300);

    &:has(.is-flipped) {
      background-image: radial-gradient(
          oklch(from var(--bgClr) l c h) 25%,
          oklch(from rebeccapurple calc(l + 0.1) c h / 0.5),
          transparent
        ),
        conic-gradient(
          from var(--bgAngle),
          var(--pink-50),
          var(--pink-400),
          var(--pink-600),
          var(--pink-400),
          var(--pink-50)
        );
      box-shadow:
        0px 0px 15px 1px var(--pink-400),
        inset 0px 0px 25px 1px var(--pink-500);
    }
  }

  @media (prefers-reduced-motion: no-preference) {
    .scene {
      animation: bgturn 5s cubic-bezier(0.47, 0, 0.745, 0.715) infinite
        alternate;
    }

    @keyframes bgturn {
      to {
        --bgAngle: 1turn;
      }
    }
  }
  .flipImg__wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 700ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
    transform-style: preserve-3d;
    transform-origin: center left;
    border-radius: 50%;

    &:hover {
      cursor: pointer;
    }
  }
  .flipImg__wrapper.is-flipped {
    transform: translateX(100%) rotateY(180deg);
  }

  .face {
    position: absolute;
    backface-visibility: hidden;
    display: grid;
    place-items: center;
    width: 100%;
    height: 100%;
    transition: scale 200ms ease-in-out;

    &:hover {
      scale: 1.1;
    }
  }

  .face--front {
    background-color: transparent;
  }
  .face--back {
    background-color: transparent;
    transform: rotateY(180deg);
  }
</style>
