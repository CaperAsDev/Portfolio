---
import Layout from "../layouts/Layout.astro";

import Hero from "@/components/molecules/Hero.astro";
import SoftSkills from "@/components/templates/SoftSkills.astro";
import HardSkills from "@/components/templates/HardSkills.astro";
import Projects from "@/components/organisms/Projects.astro";
import { getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<Layout>
  <main>
    <Hero lang={lang} />
    <Projects lang={lang} />
    <HardSkills lang={lang} />
    <SoftSkills lang={lang} />
  </main>
</Layout>

<style>
  main {
    width: 100%;
    height: fit-content;
    display: grid;
    gap: 50px;
    place-items: center;
  }

  @media screen and (min-width: 768px) {
    main {
      padding-top: 100px;
    }
  }
</style>
